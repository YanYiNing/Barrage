/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}

.msg_area_left {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.msg_text_left {
  margin-top: 20rpx;
  max-width: 450rpx;
  background-color: #ddd;
  border-radius: 5%;
  padding: 20rpx;
  font-size: 35rpx;
}

.msg_area_right {
  margin-top: 20rpx;  
  display: flex;
  flex-direction: row-reverse;
}

.msg_text_right {
  margin-top: 20rpx;
  font-size: 35rpx;
  max-width: 450rpx;
  background-color: #009cff;
  color: #fff;
  font-weight: lighter;
  border-radius: 5%;
  padding: 20rpx;
}

.msg_body {
  flex: 1;
  margin-bottom: 130rpx;
}

.input_body {
  background-color: #eee;
  height: 100rpx;
  width: 100%;
  position:fixed; 
  bottom:0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.input_area {
  background-color: #fff;
  margin: 15rpx;
  flex: 1;
  font-size: 35rpx;
  padding: 10rpx;
}

.line {
  height: 10rpx;
  width: 100%;
  background-color: #ddd;
}